/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@environments/*": ["src/environments/*"],
      "@shared/*": ["src/app/shared/*"],
      "@store/*": ["src/app/store/*"],
      "@views/*": ["src/app/views/*"],
      "@testing/*": ["src/app/testing/*"],
      "@stories/*": ["src/stories/*"],
      "@src/*": ["src"],
    },
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine", "node", "googlemaps"
    ],
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
  // "exclude": [],

}
