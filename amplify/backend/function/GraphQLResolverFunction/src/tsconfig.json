{
  "compilerOptions": {
    "declaration": false,
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "types": ["node", "aws-lambda"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "sourceMap": false,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./"
  },
  "include": ["./ts/**/*"],
  "exclude": ["node_modules"]
}