{
  "compilerOptions": {
    "declaration": false,
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "lib": ["es2017"],
    "types": ["node", "aws-lambda"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "baseUrl": ".",
    "outDir": "../src"
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}